<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8" />
        <title>To Do List</title>
        <link rel="stylesheet" href="css/styles.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;900&family=Quicksand:wght@300&family=Ubuntu&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
            <form action="/delete" method="post">
                <% listItems.forEach((el)=> { %>
                <div class="item">
                    <input
                        type="checkbox"
                        name="deleteWork"
                        value="<%= el._id %>"
                        onchange="this.form.submit()"
                    />
                    <p><%= el.workName %></p>
                </div>
                <% }); %>
                <input type="hidden" name="listName" value="<%= listTitle %>" />
            </form>

            <form action="/" method="post">
                <div class="item">
                    <input
                        class="no-outline"
                        type="text"
                        placeholder="Add item"
                        name="newWork"
                        autocomplete="off"
                    />
                    <button
                        type="submit"
                        class="btn"
                        name="list"
                        value="<%= listTitle %>"
                    >
                        +
                    </button>
                </div>
            </form>
        </div>
    </body>
</html>
